<%- include('includes/head') %>
    <%- include('includes/loading-page') %>
        <%- include('includes/header',{page: "Project" }) %>
            <!-- Projects Start -->
            <div class="container-xxl py-5">
                <div class="container">
                    <div class="section-title text-center">
                        <h1 class="display-5 mb-5">Our Projects</h1>
                    </div>
                    <div class="row mt-n2 wow fadeInUp" data-wow-delay="0.3s">
                        <div class="col-12 text-center">
                            <ul class="list-inline mb-5" id="portfolio-flters">
                                <li class="mx-2 active" data-filter="*">All</li>
                                <% categs.forEach(c=>{ %>
                                    <li class="mx-2" data-filter=".<%=c.en.replace(/ /g, "")%>">
                                        <%= c.en%>
                                    </li>
                                    <%}) %>
                            </ul>
                        </div>
                    </div>
                    <div class="row g-4 portfolio-container">
                        <%let i=0%>
                            <%projects.forEach(p=>{%>
                                <div class="col-lg-4 col-md-6 portfolio-item <%=p.categ.en.replace(/ /g, "")%> wow fadeInUp"
                                    data-wow-delay="0.<%i++%>s">
                                    <div class="rounded overflow-hidden">
                                        <div class="position-relative overflow-hidden">
                                            <img class="img-fluid w-100" src="<%=p.img%>" alt="">
                                            <div class="portfolio-overlay">
                                                <a class="btn btn-square btn-outline-light mx-1" href="<%=p.img%>"
                                                    data-lightbox="portfolio"><i class="fa fa-eye"></i></a>
                                                <a class="btn btn-square btn-outline-light mx-1" href="/project-details/<%-p._id%>"><i
                                                        class="fa fa-link"></i></a>
                                            </div>
                                        </div>
                                        <div class="border border-5 border-light border-top-0 p-4">
                                            <p class="text-primary fw-medium mb-2">
                                                <%=p.name.en%>
                                            </p>
                                            <h5 class="lh-base mb-0">
                                                <%=p.desc.en%></a>
                                        </div>
                                    </div>
                                </div>
                                <%})%>
                    </div>
                </div>
            </div>
            <!-- Projects End -->
            <%- include('includes/footer') %>